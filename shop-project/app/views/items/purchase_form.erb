<div class="container">
<%=form_for @items do |f| %>
<%= f.label :name %>
<%= f.text_field :name%>

<%= f.label :cost %>
<%= f.text_field :cost%>

<%= f.label :description %>
<%= f.text_field :description%>

<%= f.collection_select :shopinventory_id, Shopinventory.all, :id, :name %>
<%= f.submit %>
<% end %>
</div>
